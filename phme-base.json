{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location":{
      "type": "string",
      "allowedValues": [
        "East US",
        "West US",
        "West Europe",
        "North Europe",
        "East Asia",
        "South East Asia"
      ],
      "metadata": {
        "description": "Deployment location"
      }
    },
    "adminUsername":{
      "type":"string",
      "metadata":{
        "description":"Admin username on all VMs."
      }
    },
    "adminPassword":{
      "type":"securestring",
      "metadata":{
        "description":"Admin password on all VMs."
      }
    }
  },
  "variables": {
    "sharedTemplateUri":"https://raw.githubusercontent.com/kasmihmed/phme-azure-template/master/shared-template.json",
    "websTemplateUri":"https://raw.githubusercontent.com/kasmihmed/phme-azure-template/master/webs-template.json",
    "databaseTemplateUri":"https://raw.githubusercontent.com/kasmihmed/phme-azure-template/master/db-template.json",
    "elasticsearchTemplateUri":"",
    "workerTemplateUri":""

  },
  "resources":[
    {"name":"shared",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "properties":{
        "mode":"Incremental",
        "templateLink":{
         "uri":"[variables('sharedTemplateUri')]" ,
          "contentVersion":"1.0.0.0"
        }
      }


    },
    {"name":"webs",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "dependsOn":["Microsoft.Resources/deployments/shared"],
      "properties":{
        "mode":"Incremental",
        "templateLink":{
         "uri":"[variables('websTemplateUri')]" ,
          "contentVersion":"1.0.0.0"
        },
        "parameters":{
          "resourceLocation":{
            "value":"[parameters('location')]"
          },
          "vmssName":{
            "value":"testwebss"
          },
          "instanceCount":{
            "value":2
          },
          "adminUsername":{
            "value":"[parameters('adminusername')]"
          },
          "adminPassword":{
            "value":"[parameters('adminpassword')]"
          }
          }
         }
      },
    {"name":"dbs",
      "type":"Microsoft.Resources/deployments",
      "apiVersion":"2015-01-01",
      "dependsOn":["Microsoft.Resources/deployments/shared"],
      "properties":{
        "mode":"Incremental",
        "templateLink": {
          "uri": "[variables('databaseTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters":{
          "region":{
            "value":"[parameters('location')]"
          },
          "storageAccountNamePrefix":{
            "value":"testdbstorageaccount"
          },
          "domainName":{
            "value":"test-phme-jumpbox"
          },
          "adminUsername":{
            "value":"[parameters('adminusername')]"
          },
          "adminPassword":{
            "value":"[parameters('adminpassword')]"
          },
          "tshirtSize":{
            "value":"Small"
          },
          "replicatorPassword":{
            "value":"[parameters('adminpassword')]"
          },
          "jumpbox":{
            "value":"Enabled"
          }

        }
        }
      }
  ]
   }